<head>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>    
<script>
function showHint(str)
{
var xmlhttp;
if (str.length==0)
  { 
  document.getElementById("txtHint").innerHTML="";
  return;
  }
if (window.XMLHttpRequest)
  {// code for IE7+, Firefox, Chrome, Opera, Safari
  xmlhttp=new XMLHttpRequest();
  }
else
  {// code for IE6, IE5
  xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
  }
xmlhttp.onreadystatechange=function()
  {
  if (xmlhttp.readyState==4 && xmlhttp.status==200)
    {
    document.getElementById("txtHint").innerHTML=xmlhttp.responseText;
    }
  }
xmlhttp.open("GET","gethint.asp?q="+str,true);
xmlhttp.send();
}
</script>
<script>
$(document).ready(function() {
	$('select').change(function() {
		$.ajax({
		   url: 'http://soba.cs.man.ac.uk/~sanchea2/something.php?selection=',
		   success: function (response) {
		     $('#test').html(response);
		   }
		});
	});
});

</script>
</head>
<body>

<h3>Start typing a name in the input field below:</h3>
<form action=""> 
 <select id="txt1" onchange="showHint(this.value)">
  <option value="v">Volvo</option>
  <option value="s">Saab</option>
  <option value="ms">Mercedes</option>
  <option value="a">Audi</option>
</select>
</form>
<div id="test"></div>
<p>Suggestions: <span id="txtHint"></span></p> 

